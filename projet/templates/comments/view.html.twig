{% extends 'base.html.twig' %}

{% block title %}آراء المستخدمين{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .comments-container {
            margin: 20px;
        }
        .comment-item {
            margin-bottom: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
        .comment-user {
            font-weight: bold;
            margin-bottom: 5px;
        }
        .comment-rating {
            color: #f39c12;
            margin-bottom: 5px;
        }
        .comment-text {
            font-style: italic;
        }
        .back-button {
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<section id="comments" class="comments section light-background">
    <!-- عنوان القسم -->
    <div class="container section-title aos-init aos-animate" data-aos="fade-up">
        <h2>تعليقات المستخدمين على {{ employer.name }}</h2> <!-- عرض اسم الموظف -->
        <p>هذه هي تعليقات المستخدمين على الموظف المحدد.</p>
    </div>
    <!-- نهاية عنوان القسم -->
    <div class="container comments-container">
        {% if comments is not empty %}
            {% for comment in comments %}
                <div class="comment-item">
                    <div class="comment-user">{{ comment.user }}</div>
                    <div class="comment-rating">التقييم: {{ comment.rating }} نجوم</div>
                    <div class="comment-text">{{ comment.comment }}</div>
                </div>
            {% endfor %}
        {% else %}
            <p>لم يتم العثور على تعليقات.</p>
        {% endif %}
        <a href="{{ path('app_tache_index') }}" class="btn btn-secondary back-button">العودة إلى قائمة المهام</a>
    </div>
</section>
{% endblock %}