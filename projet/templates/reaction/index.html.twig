{% extends 'base.html.twig' %}

{% block title %}Reaction index{% endblock %}

{% block body %}
    <h1>Reaction index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reaction in reactions %}
            <tr>
                <td>{{ reaction.id }}</td>
                <td>{{ reaction.content }}</td>
                <td>{{ reaction.createdAt ? reaction.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_reaction_show', {'id': reaction.id}) }}">show</a>
                    <a href="{{ path('app_reaction_edit', {'id': reaction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reaction_new') }}">Create new</a>
{% endblock %}
