{% extends 'base.html.twig' %}

{% block title %}التسجيل{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .register-form {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #f9f9f9;
        }
        .register-form h1 {
            text-align: center;
            color: #0066cc;
        }
        .register-form .form-group {
            margin-bottom: 15px;
        }
        .register-form .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #333;
        }
        .register-form .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
        .register-form .btn {
            display: block;
            width: 100%;
            padding: 10px;
            border: none;
            background-color: #0066cc;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
        .register-form .btn:hover {
            background-color: #005bb5;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="register-form">
        <h1>التسجيل</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_row(registrationForm.username, {'label': 'اسم المستخدم'}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.email, {'label': 'البريد الإلكتروني'}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'كلمة المرور'
                }) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.agreeTerms, {'label': 'أوافق على الشروط'}) }}
            </div>

            <button type="submit" class="btn">تسجيل</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
